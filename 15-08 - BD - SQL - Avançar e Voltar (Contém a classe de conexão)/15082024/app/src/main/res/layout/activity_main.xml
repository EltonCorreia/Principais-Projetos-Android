<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="20dp"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btnClicar"
        android:layout_width="194dp"
        android:layout_height="59dp"
        android:layout_margin="15dp"
        android:onClick="conectar"
        android:text="Testar" />

    <TextView
        android:id="@+id/txtMostrar1"
        android:layout_width="match_parent"
        android:layout_height="37dp"
        android:layout_margin="15dp"
        android:text="TextView"
        android:textAlignment="center" />

    <TextView
        android:id="@+id/txtMostrar2"
        android:layout_width="match_parent"
        android:layout_height="37dp"
        android:layout_margin="15dp"
        android:text="TextView"
        android:textAlignment="center" />

    <LinearLayout
        android:layout_width="343dp"
        android:layout_height="98dp"
        android:orientation="horizontal"
        android:padding="10dp">

        <Button
            android:id="@+id/btnVoltar"
            android:layout_width="299dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:onClick="voltar"
            android:text="&lt;" />

        <Button
            android:id="@+id/btnPrimeiro"
            android:layout_width="299dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:onClick="primeiro"
            android:text="&lt;&lt;" />

        <Button
            android:id="@+id/btnUltimo"
            android:layout_width="299dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:onClick="ultimo"
            android:text="&gt;&gt;" />

        <Button
            android:id="@+id/btnAvancar"
            android:layout_width="299dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:onClick="avancar"
            android:text="&gt;" />
    </LinearLayout>

</LinearLayout>